<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/onBoardingHeaderTVId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/custom_promary_color"
        android:layout_marginTop="25dp"
        android:text="Virtual Nurse"
        android:textSize="42dp" />


    <ImageView
        android:id="@+id/onBoardingImageViewId"
        android:layout_width="400dp"
        android:layout_height="277dp"
        android:layout_marginTop="25dp"
        android:scaleType="center"/>


    <TextView
        android:id="@+id/onBoardingTitleTVId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Virtual Nurse"
        android:textColor="@color/custom_promary_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/onBoardingDescriptionTVId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Virtual Nurse"
        android:textColor="@color/black"
        android:textSize="12sp" />



</androidx.appcompat.widget.LinearLayoutCompat>